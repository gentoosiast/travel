{
  "extends": [
    "stylelint-config-standard-scss",
    "stylelint-config-prettier-scss"
  ],
  "rules": {
    "selector-class-pattern": [
      "^([a-z][a-z0-9]*)(-[a-z0-9]+)*((__[a-z][a-z0-9]*)(-[a-z0-9]+)*)?((_[a-z][a-z0-9]*)(-[a-z0-9]+)*)?$",
      {
        "message": "Expected class selector to conform to BEM"
      }
    ]
  }
}
